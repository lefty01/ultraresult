#!/usr/bin/nodejs

// nodejs/express/mongodb app to manage runners in/out times at
// aidstation/checkpoints during (ultra) run event.
//
// Copyright (C) 2016, 2018 Andreas Loeffler (http://exitzero.de)
//

var debug = require('debug')('ultraresult');
var app = require('../app');

app.set('port', process.env.PORT || 3100);


var listenOnIp = '0.0.0.0'; // vs. 127.0.0.1
var server = app.listen(app.get('port'), listenOnIp, function() {
  debug('Express server listening on port ' + server.address().port);
});

console.log("server started on http://localhost:" + app.get('port'));
